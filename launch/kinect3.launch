<launch>
	<arg name="camera" 			default="kinect3" />
	<arg name="device_serial"		default="1306260132" />
	<arg name="device_id"	 		default="3@0" />
	<arg name="base_link" 			default="world" />
	<arg name="publish_tf" 			default="true" />
	<arg name="depth_registration" 		default="true" />
	<arg name="num_worker_threads" 		default="3" />
	<arg name="rgb_camera_info_url" 	default="file://$(find depth_cam_extrinsics_calib)/camera_info/rgb_$(arg device_serial).yaml" />
	<arg name="depth_camera_info_url" 	default="file://$(find depth_cam_extrinsics_calib)/camera_info/depth_$(arg device_serial).yaml" />
	<arg name="extra_processing" 		default="false" />

	<rosparam command="load" ns="/$(arg camera)/driver" file="$(find kinects_human_tracking)/config/$(arg camera)_depth_offsets.yaml" />

	<!-- Openni Launch -->
	<include file="$(find openni_launch)/launch/openni.launch">
		<arg name="camera" value="$(arg camera)" />
		<arg name="device_id" value="$(arg device_id)" />
		<arg name="depth_registration" value="$(arg depth_registration)" />
		<arg name="rgb_camera_info_url" value="$(arg rgb_camera_info_url)" />
		<arg name="depth_camera_info_url" value="$(arg depth_camera_info_url)" />
		<arg name="publish_tf" value="$(arg publish_tf)" />
		<arg name="num_worker_threads" value="$(arg num_worker_threads)" />
		<arg name="disparity_processing" value="$(arg extra_processing)"/>
		<arg name="disparity_registered_processing" value="$(arg extra_processing)" />
		<arg name="hw_registered_processing" value="$(arg extra_processing)" />
		<arg name="sw_registered_processing" value="$(arg extra_processing)" />
	</include>

</launch>
